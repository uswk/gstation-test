switch(<%= @ajax_flg %>){
  case 1:  //登録成功
    //メッセージダイアログ閉じる
    $('#modal_memo').dialog("close");
    alert("メモの登録が完了しました。");
    $("#search_form").submit();
    break;
  case 2:  //更新成功
    //メッセージダイアログ閉じる
    $('#modal_memo').dialog("close");
    alert("メモの更新が完了しました。");
    $("#search_form").submit();
    break;
  case 3:  //削除成功
    //メッセージダイアログ閉じる
    $('#modal_memo').dialog("close");
    alert("メモの削除が完了しました。");
    $("#search_form").submit();
    break;
  case 9:  //更新失敗
    alert("メモの更新に失敗しました。");
    break;
}
