<h1>変更申請詳細画面</h1>

<table>
  <thead>
    <tr><th colspan=3>変更後</th></tr>
    <tr>
      <th width=15% rowspan=2>ステーション</th>
      <th width=15%>コード</th>
      <td width=70%><%= @t_change_shinsei.cust_code %></td>
    </tr>
    <tr>
      <th>ステーション名</th>
      <td <%= @t_change_shinsei.cust_name.to_s!=@m_custom.cust_name.to_s ? "bgcolor=pink" : "" %>><%= @t_change_shinsei.cust_name %></td>
    </tr>
    <tr>
      <th colspan=2>申請区分</th>
      <td><%= @t_change_shinsei.shinsei_name %></td>
    </tr>
    <tr>
      <th colspan=2>申請日</th>
      <td><%= @t_change_shinsei.shinsei_date.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <th colspan=2>希望日</th>
      <td><%= @t_change_shinsei.kibou_date.blank? ? "" : @t_change_shinsei.kibou_date.strftime("%Y/%m/%d") %></td>
