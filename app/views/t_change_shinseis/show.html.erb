    </tr>
    <tr>
      <th colspan=2>使用内容</th>
      <td <%= @t_change_shinsei.use_content_name.to_s!=@m_custom.use_content_name.to_s ? "bgcolor=pink" : "" %>><%= @t_change_shinsei.use_content_name %></td>
    </tr>
    <tr>
      <th colspan=2>利用世帯数</th>
      <td <%= @t_change_shinsei.setai_count.to_s!=@m_custom.setai_count.to_s ? "bgcolor=pink" : "" %>><%= @t_change_shinsei.setai_count %></td>
    </tr>
    <tr>
      <th colspan=2>利用人数</th>
