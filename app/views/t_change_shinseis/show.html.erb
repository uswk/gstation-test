    </tr>
    <tr>
      <th width=15% rowspan=3>管理者</th>
      <th width=15%>コード</th>
      <td width=70% <%= @t_change_shinsei.admin_code.to_s!=@m_custom.admin_code.to_s ? "bgcolor=pink" : "" %>><%= @t_change_shinsei.admin_code %></td>
    </tr>
    <tr>
      <th>名称</th>
      <td <%= @t_change_shinsei.admin_name.to_s!=@m_custom.admin_name.to_s ? "bgcolor=pink" : "" %>><%= @t_change_shinsei.admin_name %></td>
    </tr>
    <tr>
      <th>種別</th>
      <td <%= @t_change_shinsei.admin_type_name.to_s!=@m_custom.admin_type_name.to_s ? "bgcolor=pink" : "" %>><%= @t_change_shinsei.admin_type_name %></td>
    </tr>
    <tr>
      <th rowspan=2>収集区</th>
      <th>収集区名</th>
      <td <%= @t_change_shinsei.route_name.to_s!=@m_custom.route_name.to_s ? "bgcolor=pink" : "" %>><%= @t_change_shinsei.route_name %></td>
    </tr>
    <tr>
      <th>委託会社</th>
      <td <%= @t_change_shinsei.itaku_name.to_s!=@m_custom.itaku_name.to_s ? "bgcolor=pink" : "" %>><%= @t_change_shinsei.itaku_name %></td>
    </tr>
    <tr>
      <th colspan=2>ステータス</th>
      <td><%= @t_change_shinsei.confirm_name %></td>
    </tr>
