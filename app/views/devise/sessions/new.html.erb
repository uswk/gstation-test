<h1>ごみステーション管理画面　ログインページ</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>ユーザーID：<br>
    <%= f.text_field :user_id, :autofocus => true %></div>
  <div>パスワード：<br>
    <%= f.password_field :password %></div>
  <br>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "次回以降自動的にログインする" %></div>
  <% end -%>
  <br>
  <div><%= f.submit "ログインする", :class => 'btn btn-primary' %></div>
<% end %>
